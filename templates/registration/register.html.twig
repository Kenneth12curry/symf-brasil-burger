{% block body %}

<div class="row col-12 mt-2">
    <div class="col-8">
        <h4 class="mt-3 fw-bold ms-5">Brasil Burger</h4>
    </div>
  
    <div class="col-3">
        <a class="text-white fw-bold m-3 btn btn-primary ms-5" href="{{ path('app_home') }}">Catalogue</a>
    </div>
</div>


<body class="bg-light">
    {{ form_start(registrationForm, {'attr': {'class': 'd-flex flex-column align-items-center'}}) }}
    <div class="card shadow m-5 w-50 fw-bold p-5 bg-warning">
        <h4>S'inscrire</h4>
        <hr class="text-light">
            {{ form_row(registrationForm.login) }}
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.prenom) }}
            {{ form_row(registrationForm.adresse) }}
            {{ form_row(registrationForm.tel) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms,{'attr': {'class': 'mt-2 mb-2'}}) }}
            <button class="btn btn-primary w-25 text-xl fw-bolder float-end btn-lg d-none d-lg-block">Enregistrer</button>
            <button type="submit" class="btn btn-primary w-25 fw-bolder float-end btn-sm d-block d-lg-none text-sm">Enregistrer</button>

    </div>
     <p class="text-center me-5">Si vous posséder déja un compte! Veuillez s'il vous plait cliquer ici pour 
        <a href="{{path('app_login')}}">se connecter</a></p>
    {{ form_end(registrationForm) }}
   
</body>
    
{% endblock %}
