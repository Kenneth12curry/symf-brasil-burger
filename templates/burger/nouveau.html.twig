{% extends 'base.html.twig' %}

{% block content_for_layout %}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light "></span>Nouveau Burger</h4>

    <div class="row">
      <!-- Form controls -->
      <form class="form-inline" action="{{path('app_g_burger_create')}}" method="POST">

         <!-- Création d'un champ input caché pour récupérer l'id du burger -->
        <input type="hidden"  
        name="id"    value="{% if burger is defined  %} {{burger.id}} {% else %} 0 {% endif %}" >

        <div class="col-md-6 pd-3 w-100">
          <div class="card mb-4">
            <div class="card-body">
              <div class="mb-3">
             
                <label for="exampleFormControlInput1" class="form-label">Nom burger</label>
                <input 
                  class="form-control w-50"
                  type="text"
                  name="nomBurger"
                  value="{% if burger is defined  %}{{burger.nom}}{% endif %}" 
                  id="exampleFormControlInput1"
                  placeholder="Nom"
                />
              </div>
              <div class="mb-3">
                <label for="exampleFormControlReadOnlyInput1" class="form-label">Prix</label>
                <input
                  class="form-control w-50"
                  type="number"
                  step="any"
                  name="prixBurger"
                  value="{% if burger is defined  %}{{burger.prix}}{% endif %}" 
                  id="exampleFormControlReadOnlyInput1"
                  placeholder="Prix"
                />
              </div>
              <div class="mb-3">
                  <label for="formFile" class="form-label">Image</label>
                  <input class="form-control w-50"
                   name="imgBurger" type="file" id="formFile" 
                   value="{% if burger is defined  %}{{burger.image}}{% endif %}" 
                   />
              </div>
              <div>
                <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                <textarea class="form-control w-50" 
                name="descrBurger" 
                id="exampleFormControlTextarea1" 
                value="{% if burger is defined  %}{{burger.description}}{% endif %}" 
                rows="3"></textarea>
              </div>
              <div class="mt-4">
                  <button name="btnSave"  value="{% if burger is defined  %}update{% else %}create{% endif %}" 
                  type="submit" class="btn btn-primary ml-2">Enregistrer</button>
              </div>
            </div>
          </div>
      </div>
   
      </form>
    
    </div>
   
</div>
{% endblock content_for_layout %}
