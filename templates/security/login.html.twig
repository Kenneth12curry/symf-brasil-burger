{% block body %}
<div class="">
    <div class="row col-12 mt-5">
        <div class="col-6">
            <h4 class="fw-bold ms-5">Brasil Burger</h4>
        </div>
        <div class="col-4">
            <a class="text-dark m-3 fw-bold ms-5" href="{{path('app_home')}}">Catalogue</a>
        </div>
        <div class="col-2">
            <a class="btn btn-primary fw-bold" href="{{path('app_register')}}" role="button">S'inscrire</a> 
        </div>   
    </div>
</div>

<form method="post" class="d-flex flex-column align-items-center">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="card shadow p-3 w-75 m-5 d-flex flex-column align-items-center">
        <div class="card shadow bg-warning p-3 m-5 w-75 container">
            <h1 class="h3 mb-3 font-weight-normal ms-5">Se Connecter</h1>
            <label for="inputLogin" class="champEmail ms-5">Login</label>
            <input type="text" class="form-control m-2 w-50 ms-5"  for="validationCustom01" class="form-control bg"  for="validationCustom01" value="" name="login" id="inputLogin"  autocomplete="username" required autofocus>
            <label for="inputPassword" class="champPwd ms-5">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control m-2 w-50 ms-5" autocomplete="current-password" required>
        
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
        
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <button class="btn btn-primary fw-bold ms-2 mt-4 mb-5 w-25 ms-5" type="submit">
                Sign in
            </button>
        
        </div>
    </div>
    
</form>
{% endblock %}
